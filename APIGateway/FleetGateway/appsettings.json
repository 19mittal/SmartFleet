{
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "fleet-route": {
        "ClusterId": "fleet-cluster",
        "AuthorizationPolicy": "Default",
        "Match": { "Path": "/api/fleet/{**catch-all}" }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7001/" }
        }
      },
      "fleet-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7002/" }
        }
      }
    }
  },
  "Jwt": {
    "Key": "Your_Super_Secret_Key_At_Least_32_Chars_Long_12345!",
    "Issuer": "SmartFleetAuthAPI",
    "Audience": "SmartFleetUsers",
    "DurationInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
